<h4>Job Details</h4>
<table class="striped" border = 1>
<tr><td>
  <b>Name:</b></td><td>
  <%= @job.name %>
</td></tr>

<tr><td>
  <b>Description:</b></td><td>
  <%= @job.description %>
</td></tr>

<tr><td>
  <b>Status:</b></td><td>
  <%= if @job.active; 'Active' else 'Inactive' end %>
</td></tr>
</table>
<br>
<%= link_to 'Edit', edit_job_path(@job), :class=> "waves-effect waves-light btn #001e00"%> |
<%= link_to 'Back', jobs_path, :class=> "waves-effect waves-light btn #001e00" %>
