<div class="card black">
  <div class="card-content white-text">
    <span class="card-title">Go to</span>
    <ul class="collection">
      <% if current_user.role?(:admin) %>
          <li><%= link_to 'Add New Store', new_store_path, :class => "collection-item" %></li>
          <li><%= link_to 'Add New Employees', new_employee_path, :class => "collection-item" %></li>
          <li><%= link_to 'Add New Assignments', new_assignment_path, :class => "collection-item" %></li>
          <li><%= link_to 'Add New Shift', new_shift_path, :class => "collection-item" %></li>
          <li><%= link_to 'Add New Job', new_job_path, :class => "collection-item" %></li>
          <li><%= link_to 'Add New Pay Grade', new_pay_grade_path, :class => "collection-item" %></li>
          <li><%= link_to 'Add New Pay Rate', new_pay_grade_rate_path, :class => "collection-item" %></li>
          <li><%= link_to 'Add Job To Shift', new_shift_job_path, :class => "collection-item" %></li>
      <% end %>
      <% if current_user.role?(:manager) %>
          <li><%= link_to 'Add New Shift', new_shift_path, :class => "collection-item" %></li>
          <li><%= link_to 'Add Job To Shift', new_shift_job_path, :class => "collection-item" %></li>
      <% end %>
    </ul>
  </div>
</div>